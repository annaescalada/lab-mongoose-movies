<h2>Celebrities</h2>
<a href="/celebrities/new"> Add a new celebrity</a>
<ul>
{{#each celebrities}}
  <li>
    <a href="/celebrities/{{_id}}">{{name}}</a>
    <form action="/celebrities/{{_id}}/edit" method="GET"><button type="submit">Edit</button></form>
    <form action="/celebrities/{{_id}}/delete" method="POST"><button type="submit">Delete</button></form>
  </li>
{{/each}}
</ul>